@model Gimnasio_Brothers.Models.Clase

@{
    ViewData["Title"] = "Editar Clase";
}

<h1>Editar</h1>
<br>
<h4>Editar Clase</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Idclase" />
            <div class="form-group">
                <label asp-for="Idmatricula" class="control-label">Id de Matricula</label>
                <select asp-for="Idmatricula" class="form-control" asp-items="ViewBag.Idmatricula"></select>
                <span asp-validation-for="Idmatricula" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Idactividad" class="control-label">Id de Actividad</label>
                <select asp-for="Idactividad" class="form-control" asp-items="ViewBag.Idactividad"></select>
                <span asp-validation-for="Idactividad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Idempleado" class="control-label">Id De Empleado</label>
                <select asp-for="Idempleado" class="form-control" asp-items="ViewBag.Idempleado"></select>
                <span asp-validation-for="Idempleado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Idsala" class="control-label">Id de Sala</label>
                <select asp-for="Idsala" class="form-control" asp-items="ViewBag.Idsala"></select>
                <span asp-validation-for="Idsala" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaClase" class="control-label">Fecha de la Clase</label>
                <input type="date" asp-for="FechaClase" class="form-control" />
                <span asp-validation-for="FechaClase" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HoraInicio" class="control-label">Hora de Inicio</label>
                <input type="time" asp-for="HoraInicio" class="form-control" />
                <span asp-validation-for="HoraInicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HoraFin" class="control-label">Hora de salida</label>
                <input type="time" asp-for="HoraFin" class="form-control" />
                <span asp-validation-for="HoraFin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Estado" class="control-label"></label>
                <input asp-for="Estado" class="form-control" />
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Capacidad" class="control-label"></label>
                <input asp-for="Capacidad" class="form-control" />
                <span asp-validation-for="Capacidad" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <button type="submit" class="btn btn-success"><i class="bi bi-plus-circle"> Guardar</i></button>
            </div>
            <br>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-warning"><i class="bi bi-arrow-return-left"> Regresar a Clases</i></a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
