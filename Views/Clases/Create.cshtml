@model Gimnasio_Brothers.Models.Clase

@{
    ViewData["Title"] = "Crear";
}

<h1>Crear una Clase</h1>
<br>
<h4>Clases</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Idmatricula" class="control-label">Id Matricula</label>
                <select asp-for="Idmatricula" class="form-control" asp-items="ViewBag.Idmatricula"></select>
            </div>
            <div class="form-group">
                <label asp-for="Idactividad" class="control-label">Nombre de la Actividad</label>
                <select asp-for="Idactividad" class="form-control" asp-items="ViewBag.Idactividad"></select>
            </div>
            <div class="form-group">
                <label asp-for="Idempleado" class="control-label">Id Empleado</label>
                <select asp-for="Idempleado" class="form-control" asp-items="ViewBag.Idempleado"></select>
            </div>
            <div class="form-group">
                <label asp-for="Idsala" class="control-label">Id Sala</label>
                <select asp-for="Idsala" class="form-control" asp-items="ViewBag.Idsala"></select>
            </div>
            <div class="form-group">
                <label asp-for="FechaClase" class="control-label">Fecha de la Clase</label>
                <input type="date" asp-for="FechaClase" class="form-control" />
                <span asp-validation-for="FechaClase" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HoraInicio" class="control-label">Hora de Inicio</label>
                <input type="time" asp-for="HoraInicio" class="form-control" />
                <span asp-validation-for="HoraInicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HoraFin" class="control-label">Hora de Salida</label>
                <input type="time" asp-for="HoraFin" class="form-control" />
                <span asp-validation-for="HoraFin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Estado" class="control-label">Estado de la Clase</label>
                <input asp-for="Estado" class="form-control" />
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Capacidad" class="control-label">Capacidad de la Clase</label>
                <input type="number" asp-for="Capacidad" class="form-control" />
                <span asp-validation-for="Capacidad" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <input type="submit" value="Crear Clase" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<br>
<div>
    <a asp-action="Index" class="btn btn-secondary"> <i class="bi bi-arrow-return-left"></i> Volver a Clases</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
