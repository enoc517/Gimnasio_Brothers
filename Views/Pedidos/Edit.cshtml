@model Gimnasio_Brothers.Models.Pedido

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar</h1>

<h4>Pedido</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Idpedido" />
            <div class="form-group">
                <label asp-for="Idempleado" class="control-label">Empleado</label>
                <select asp-for="Idempleado" class="form-control" asp-items="ViewBag.Idempleado"></select>
                <span asp-validation-for="Idempleado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Idprovedores" class="control-label">Provedor</label>
                <select asp-for="Idprovedores" class="form-control" asp-items="ViewBag.Idprovedores"></select>
                <span asp-validation-for="Idprovedores" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Estado" class="control-label"></label>
                <input asp-for="Estado" class="form-control" />
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaCompra" class="control-label">Fecha Compra</label>
                <input asp-for="FechaCompra" class="form-control" />
                <span asp-validation-for="FechaCompra" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaRecibido" class="control-label">Fecha Recibido</label>
                <input asp-for="FechaRecibido" class="form-control" />
                <span asp-validation-for="FechaRecibido" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cantidad" class="control-label"></label>
                <input asp-for="Cantidad" class="form-control" />
                <span asp-validation-for="Cantidad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-success"><i class="bi bi-plus-circle"> Guardar</i></button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-warning" class="bi bi-arrow-return-left"> Regresar a Pedidos</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
