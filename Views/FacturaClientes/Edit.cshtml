@model Gimnasio_Brothers.Models.FacturaCliente

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar</h1>

<h4>Factura de cliente</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Idfactura" />
            <div class="form-group">
                <label asp-for="IdclienteMembresia" class="control-label"></label>
                <select asp-for="IdclienteMembresia" class="form-control" asp-items="ViewBag.IdclienteMembresia"></select>
                <span asp-validation-for="IdclienteMembresia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaEmicion" class="control-label"></label>
                <input asp-for="FechaEmicion" class="form-control" />
                <span asp-validation-for="FechaEmicion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MetodoPago" class="control-label"></label>
                <input asp-for="MetodoPago" class="form-control" />
                <span asp-validation-for="MetodoPago" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-dark"><i class="bi bi-arrow-return-left"> Regresar a facturas</i></a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
