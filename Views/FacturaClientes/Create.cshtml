@model Gimnasio_Brothers.Models.FacturaCliente

@{
    ViewData["Title"] = "Crear";
}

<h1>Crear Factura Cliente</h1>
<br>
<h4>Factura al cliente</h4>
<hr />
<br>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdclienteMembresia" class="control-label"></label>
                <select asp-for="IdclienteMembresia" class ="form-control" asp-items="ViewBag.IdclienteMembresia"></select>
            </div>
            <div class="form-group">
                <label asp-for="FechaEmicion" class="control-label"> Fecha de Emision</label>
                <input asp-for="FechaEmicion" class="form-control" />
                <span asp-validation-for="FechaEmicion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MetodoPago" class="control-label">Metodo De Pago</label>
                <input asp-for="MetodoPago" class="form-control" />
                <span asp-validation-for="MetodoPago" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <button type="submit" class="btn btn-success  bi bi-plus-circle"> Agregar Factura</button>
            </div>
        </form>
    </div>
</div>
<br>
<div>
    <a asp-action="Index" class="btn btn-warning bi bi-arrow-return-left"> Regresar a facturas</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
