@model IEnumerable<Gimnasio_Brothers.Models.ClienteMembresium>

@{
    ViewData["Title"] = "Index";
}

<h1>Lista de membresías</h1>

<p>
    <a asp-action="Create" class="btn btn-success"><i class="bi bi-plus-circle"> Añadir membresía</i></a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Fecha de renovación
            </th>
            <th>
                Fecha inicio
            </th>
            <th>
                Fecha fin
            </th>
            <th>
                Tipo de membresía
            </th>
            <th>
                Cliente
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FechaProxRenovacion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaInicio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaFin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdcategoraMembresiaNavigation.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdclienteNavigation.Apellidos)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdclienteMembresia" class="btn btn-warning"><i class="bi bi-pencil"> Renovar</i></a> |
                <a asp-action="Details" asp-route-id="@item.IdclienteMembresia" class="btn btn-secondary"><i class="bi bi-info-circle"> Ver</i></a> |
                <a asp-action="Delete" asp-route-id="@item.IdclienteMembresia" class="btn btn-danger"><i class="bi bi-trash"> Eliminar</i></a>
            </td>
        </tr>
}
    </tbody>
</table>
