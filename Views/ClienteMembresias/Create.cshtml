@model Gimnasio_Brothers.Models.ClienteMembresium

@{
    ViewData["Title"] = "Crear";
}

<h1>Añadir Membresía</h1>
<br>
<h4>Membresía de cliente</h4>
<hr />
<br>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdcategoraMembresia" class="control-label">Categoria Membresia</label>
                <select asp-for="IdcategoraMembresia" class ="form-control" asp-items="ViewBag.IdcategoraMembresia"></select>
            </div>
            <div class="form-group">
                <label asp-for="Idcliente" class="control-label">Cliente</label>
                <select asp-for="Idcliente" class ="form-control" asp-items="ViewBag.Idcliente"></select>
            </div>
            <div class="form-group">
                <label asp-for="FechaProxRenovacion" class="control-label">Fecha de Renovacion</label>
                <input asp-for="FechaProxRenovacion" type="date" class="form-control" />
                <span asp-validation-for="FechaProxRenovacion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaInicio" class="control-label">Fecha Inicio</label>
                <input asp-for="FechaInicio" type="date" class="form-control" />
                <span asp-validation-for="FechaInicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaFin" class="control-label">Fecha Fin</label>
                <input asp-for="FechaFin" type="date" class="form-control" />
                <span asp-validation-for="FechaFin" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <button type="submit" class="btn btn-success  bi bi-plus-circle"> Agregar Cliente</button>
            </div>
        </form>
    </div>
</div>
<br>
<div>
    <a asp-action="Index" class="btn btn-warning"><i class="bi bi-arrow-return-left"></i> Regresar a Cliente Membresia</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
