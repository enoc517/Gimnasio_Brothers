@model Gimnasio_Brothers.Models.ClienteMembresium

@{
    ViewData["Title"] = "Crear";
}

<h1>Añadir membresía</h1>

<h4>Membresía de cliente</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdcategoraMembresia" class="control-label"></label>
                <select asp-for="IdcategoraMembresia" class ="form-control" asp-items="ViewBag.IdcategoraMembresia"></select>
            </div>
            <div class="form-group">
                <label asp-for="Idcliente" class="control-label"></label>
                <select asp-for="Idcliente" class ="form-control" asp-items="ViewBag.Idcliente"></select>
            </div>
            <div class="form-group">
                <label asp-for="FechaProxRenovacion" class="control-label"></label>
                <input asp-for="FechaProxRenovacion" type="date" class="form-control" />
                <span asp-validation-for="FechaProxRenovacion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaInicio" class="control-label"></label>
                <input asp-for="FechaInicio" type="date" class="form-control" />
                <span asp-validation-for="FechaInicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaFin" class="control-label"></label>
                <input asp-for="FechaFin" type="date" class="form-control" />
                <span asp-validation-for="FechaFin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Añadir" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-dark"><i class="bi bi-arrow-return-left"> Regresar a la lista</i></a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
