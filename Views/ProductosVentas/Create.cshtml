@model Gimnasio_Brothers.Models.ProductosVentum

@{
    ViewData["Title"] = "Agregar";
}

<h1>Agregar Producto</h1>
<br>
<h4>Productos de Venta</h4>
<hr />
<br>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Idprovedores" class="control-label">Nombre Del Provedor</label>
                <select asp-for="Idprovedores" class ="form-control" asp-items="ViewBag.Idprovedores"></select>
            </div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label">Nombre Del Producto</label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrecioUnitario" class="control-label"> Precio Unitario</label>
                <input asp-for="PrecioUnitario" class="form-control" />
                <span asp-validation-for="PrecioUnitario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cantidad" class="control-label"></label>
                <input asp-for="Cantidad" class="form-control" />
                <span asp-validation-for="Cantidad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdcategoriaProducto" class="control-label">Categoria Producto</label>
                <select asp-for="IdcategoriaProducto" class ="form-control" asp-items="ViewBag.IdcategoriaProducto"></select>
            </div>
            <div class="form-group">
                <label asp-for="FechaCaducidad" class="control-label">Fecha de Vencimiento</label>
                <input asp-for="FechaCaducidad" class="form-control" />
                <span asp-validation-for="FechaCaducidad" class="text-danger"></span>
            </div>
            <br>

            <div class="form-group">
                <button type="submit" class="btn btn-success  bi bi-plus-circle"> Agregar Producto</button>
            </div>
        </form>
    </div>
</div>
<br>
<div>
    <a asp-action="Index" class="btn btn-warning"><i class="bi bi-arrow-return-left"></i> Regresar a Productos</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
