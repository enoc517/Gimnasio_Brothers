@model IEnumerable<Gimnasio_Brothers.Models.Jornada>

@{
    ViewData["Title"] = "Index";
}

<h1>Jornadas</h1>

<p>
    <a asp-action="Create" class="btn btn-success"> <i class="bi bi-plus-circle"> Crear nueva Jornada </i></a>
</p>
<table class="table" id="tbljornada">
    <thead>
        <tr>
            <th>
                <h6>Fecha de Inicio</h6>
            </th>
            <th>
                <h6>Fecha de Fin</h6>
            </th>
            <th>
                <h6>Horas Trabajadas</h6>
            </th>
            <th>
                Empleado
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FechaInicio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaFin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HorasTrabajadas)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdempleadoNavigation.Apellidos)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.Idjornadas" class="btn btn-warning"> <i class="bi bi-pencil-fill"> Editar</i> </a> |
                    <a asp-action="Details" asp-route-id="@item.Idjornadas" class="btn btn-secondary"> <i class="bi bi-info-circle-fill"> Ver</i> </a> |
                    <a asp-action="Delete" asp-route-id="@item.Idjornadas" class="btn btn-danger"> <i class="bi bi-x-circle-fill"> Borrar</i> </a>
            </td>
        </tr>
}
    </tbody>
</table>
@section scripts {
    <script>
        let table = new DataTable('#tblEmpleados', {
            "language": {
                "decimal": "",
                "emptyTable": "No hay registros",
                "info": "Mostrando _START_ a _END_ de _TOTAL_ Entradas",
                "infoEmpty": "Mostrando 0 to 0 of 0 Entradas",
                "infoFiltered": "(Filtrado de _MAX_ total entradas)",
                "infoPostFix": "",
                "thousands": ",",
                "lengthMenu": "Mostrar _MENU_ Entradas",
                "loadingRecords": "Cargando...",
                "processing": "Procesando...",
                "search": "Buscar:",
                "zeroRecords": "Sin resultados encontrados",
                "paginate": {
                    "first": "Primero",
                    "last": "Ultimo",
                    "next": "Siguiente",
                    "previous": "Anterior"
                }
            },
            "width": "100%"
        });
    </script>
}