@model Gimnasio_Brothers.Models.Jornada

@{
    ViewData["Title"] = "Create";
}

<h1>Crear</h1>

<h4>Jornada</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <h6>Empleado</h6>
                <select asp-for="Idempleado" class ="form-control" asp-items="ViewBag.Idempleado"></select>
            </div>
            <div class="form-group">
                <h6>Fecha de Inicio</h6>
                <input asp-for="FechaInicio" class="form-control" />
                <span asp-validation-for="FechaInicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <h6>Fecha de Fin</h6>
                <input asp-for="FechaFin" class="form-control" />
                <span asp-validation-for="FechaFin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <h6>Horas de Trabajadas</h6>
                <label asp-for="HorasTrabajadas" class="control-label"></label>
                <input asp-for="HorasTrabajadas" class="form-control" />
                <span asp-validation-for="HorasTrabajadas" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <button type="submit" class="btn btn-success"><i class="bi bi-plus-circle"> Crear</i></button>
            </div>
        </form>
    </div>
</div>
<br>
<div>
    <a asp-action="Index" class="btn btn-warning"><i class="bi bi-arrow-return-left">Regresar a la Lista</i></a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
