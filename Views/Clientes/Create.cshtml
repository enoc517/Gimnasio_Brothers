@model Gimnasio_Brothers.Models.Cliente

@{
    ViewData["Title"] = "Crear";
}

<h1>Crear Cliente</h1>
<br>
<h4>Cliente</h4>
<hr />
<br>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Apellidos" class="control-label"></label>
                <input asp-for="Apellidos" class="form-control" />
                <span asp-validation-for="Apellidos" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dirrecion" class="control-label"></label>
                <input asp-for="Dirrecion" class="form-control" />
                <span asp-validation-for="Dirrecion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaNacimento" class="control-label">Fecha de Nacimiento</label>
                <input asp-for="FechaNacimento" class="form-control" />
                <span asp-validation-for="FechaNacimento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Telefono" class="control-label"></label>
                <input asp-for="Telefono" class="form-control" />
                <span asp-validation-for="Telefono" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cedula" class="control-label"></label>
                <input asp-for="Cedula" class="form-control" />
                <span asp-validation-for="Cedula" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EstadoCliente" class="control-label">Estado Del Cliente</label>
                <input asp-for="EstadoCliente" class="form-control" />
                <span asp-validation-for="EstadoCliente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SesionesRayosUva" class="control-label">Sesiones De Rayos UV</label>
                <input asp-for="SesionesRayosUva" class="form-control" />
                <span asp-validation-for="SesionesRayosUva" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <button type="submit" class="btn btn-success  bi bi-plus-circle"> Agregar Cliente</button>
            </div>
        </form>
    </div>
</div>
<br>
<div>
    <a asp-action="Index" class="btn btn-warning"><i class="bi bi-arrow-return-left"></i> Regresar a Cliente</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
